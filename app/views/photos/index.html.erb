<div class="d-flex justify-content-center align-items-center img-front">
  <%= image_tag("imgPlaceholder (1).png", class: "w-50") %>
</div>

<div class="row">
  <div class="col-md-4">
    <!-- Première carte -->
    <div class="card mb-4 custom-card">
      <%= image_tag("imgPlaceholder (2).png", class: "card-img-top") %>
      <div class="card-body">
        <h5 class="card-title">Titre de l'article</h5>
        <p class="card-text">Description de l'article</p>
        <div class="d-flex justify-content-between align-items-center">
          <%= link_to 'Buy', '#', class: "btn btn-primary" %>
          <div class="text-muted">€99.99</div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <!-- Deuxième carte -->
    <div class="card mb-4 custom-card">
      <%= image_tag("imgPlaceholder (3).png", class: "card-img-top") %>
      <div class="card-body">
        <h5 class="card-title">Platon</h5>
        <p class="card-text">Un chat pensif, toujours prêt à philosopher !</p>
        <div class="d-flex justify-content-between align-items-center">
          <%= link_to 'Buy', '#', class: "btn btn-primary" %>
          <div class="text-muted">€99.99</div>
        </div>
      </div>
    </div>
  </div>
  <!-- Ajoutez plus de cartes ici -->
</div>